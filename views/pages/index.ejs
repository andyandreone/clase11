<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 mt-5">
            <h1 class="text-center">Lista de productos</h1>
            <table class="table table-striped table-hover mt-5 text-center">
                <thead>
                    <tr>
                        <th scope="col">id</th>
                        <th scope="col">Title</th>
                        <th scope="col">Price</th>
                        <th scope="col">Thumbnail</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (items) { %>                     
                            <% items.forEach(function(producto){ %>
                                <tr style="vertical-align: middle;">
                                <th scope="row"><%= producto.id %></th>
                                <td><%= producto.title %></td>
                                <td><%= producto.price %></td>
                                <td><img src="<%= producto.thumbnail %>" alt="<%= producto.title%>" height="50"></td>
                            </tr>
                            <% }); %>         
                       
                    <% }   
                     else { %>
                        <tr>
                            <td colspan="4" class="text-center">No hay productos</td>
                        </tr>
                    <% } %>
                   
                
                </tbody>
            </table>
        </div>
    </div>
</div>